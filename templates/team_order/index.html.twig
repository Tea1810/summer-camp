{% extends 'base.html.twig' %}

{% block title %}Team's Order{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light custom-navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Sportsly</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ path('app_home_page20') }}" >Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_team_index') }}">Team</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_matches_index') }}">Matches</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_sponsors_index') }}">Sponsors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_team_order') }}">Standings</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <h1 class="title">Standings</h1>
<table class="table">
    <thead>
    <tr>

        <th style="text-align: center;">Team</th>
        <th style="text-align: center;">Points</th>

    </tr></thead>
    <tbody>

       {% for team in teams %}
    <tr><td style="text-align: center;">{{ team.name }}</td> <td style="text-align: center;">{{ team.point }}</td></tr>
    {% endfor %}
    </tbody></table>

{% endblock %}
