<form method="post" action="{{ path('app_matches_delete', {'id': match.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ match.id) }}">
    <button class="btn custom-button" style="margin-left: 10px">
        <div class="custom-link-button">Delete Match</div></button>
</form>
