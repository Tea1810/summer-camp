{% extends 'base.html.twig' %}

{% block title %}Teams{% endblock %}
{% block body %}



    <table class="table table-striped" style="margin-top: 40px">
        <thead>
            <tr>

                <th style="text-align: center;">Name</th>
                <th style="text-align: center;">Creation Date</th>
                <th style="text-align: center;">Coach</th>
                <th style="text-align: center;">National Title</th>

                <th style="text-align: center;">Actions</th>

            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td style="text-align: center;">{{ team.name }}</td>
                <td style="text-align: center;">{{ team.creationDate ? team.creationDate|date('Y-m-d'): '' }}</td>
                <td style="text-align: center;">{{ team.coach }}</td>
                <td style="text-align: center;">{{ team.nationalTitle }}</td>


                <td style="text-align: center;">
                    <ul style="list-style: none;">
                        <li><a href="{{ path('app_team_show', {'id': team.id}) }}" class="no_link">see team</a></li>
                 <li>   <a href="{{ path('app_team_edit', {'id': team.id}) }}" class="no_link">edit</a></li>
                    </ul>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

<button class="btn custom-button"> <a href="{{ path('app_team_new') }}" class="custom-link-button">Add new team</a></button>
    <button class="btn custom-button"> <a href="{{ path('app_matches_index') }}" class="custom-link-button">Generate Matches</a></button>

{% endblock %}
