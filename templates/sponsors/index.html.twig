{% extends 'base.html.twig' %}

{% block title %}Sponsors index{% endblock %}

{% block body %}
    <h1>Sponsors index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CommercialZone</th>
                <th>Sponsored Teams</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sponsor in sponsors %}
            <tr>
                <td>{{ sponsor.id }}</td>
                <td>{{ sponsor.name }}</td>
                <td>{{ sponsor.commercialZone }}</td>

                    {% if sponsor.teams|length == 0 %}
                    <td>No Teams</td>
                {% else %}
                    {% for teamToShow in sponsor.teams %}
                <td>{{teamToShow }}</td>
                {% endfor %}{% endif %}
                <td>
                    <a href="{{ path('app_sponsors_show', {'id': sponsor.id}) }}">show</a>
                    <a href="{{ path('app_sponsors_edit', {'id': sponsor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

    <a href="{{ path('app_sponsors_new') }}">Create new</a>
{% endblock %}
