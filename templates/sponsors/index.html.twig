{% extends 'base.html.twig' %}

{% block title %}Sponsors{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light custom-navbar">
        <div class="container-fluid">
            <a class="navbar-brand" >Sportsly</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ path('app_home_page20') }}" >Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_team_index') }}">Team</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_matches_index') }}">Matches</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_sponsors_index') }}">Sponsors</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <h1>Sponsors</h1>

    <table class="table">
        <thead>
            <tr>
                <th style="text-align: center;">Company</th>
                <th style="text-align: center;">Commercials appear on</th>
                <th style="text-align: center;">Sponsored Teams</th>
                <th style="text-align: center;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sponsor in sponsors %}
            <tr>

                <td style="text-align: center;">{{ sponsor.name }}</td>
                <td style="text-align: center;">{{ sponsor.commercialZone }}</td>
                 <td style="text-align: center;">
                    {% if sponsor.teams|length == 0 %}
                     <ul style="list-style: none;">
                    <li>No Teams</li>
                     </ul>
                {% else %}
                    <ul style="list-style: none;">
                    {% for teamToShow in sponsor.teams %}
                        <li>{{teamToShow }}</li>
                      {% endfor %}
                    </ul>
                    {% endif %}</td>
                <td style="text-align: center;">
                    <ul style="list-style: none;">
                   <li> <a href="{{ path('app_sponsors_show', {'id': sponsor.id}) }}" class="no_link">see sponsor</a></li>
                   <li> <a href="{{ path('app_sponsors_edit', {'id': sponsor.id}) }}" class="no_link">edit</a></ul></li>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

    <button class="btn custom-button"><a href="{{ path('app_sponsors_new') }}" class="custom-link-button">Add new sponsor</a></button>
{% endblock %}
