<form method="post" action="{{ path('app_player_delete', {'id': player.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="text-right">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ player.id) }}">
    <button class="btn custom-button" style="margin-right: 180px">
        <div class="custom-link-button">Delete</div></button>
</form>
