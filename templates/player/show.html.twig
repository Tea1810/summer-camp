{% extends 'base.html.twig' %}

{% block title %}Player{% endblock %}

{% block body %}
    <h1>Player</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Name</th>
                <td>{{ player.name }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ player.age }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ player.nationality }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ player.role }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_team_show', { 'id':player.team.id}) }}">back to list</a>

    <a href="{{ path('app_player_edit', {'id': player.id}) }}">edit</a>

    {{ include('player/_delete_form.html.twig') }}
{% endblock %}
